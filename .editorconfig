# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript files
[*.{ts,tsx}]
indent_style = space
indent_size = 2
quote_type = double
max_line_length=100

# JSON files
[*.json]
indent_style = space
indent_size = 2
